# Server
PORT=8090
PUBLIC_URL=
MCP_HTTP_PATH=/mcp
HEALTH_PATH=/healthz

# Flair API credentials (client-credentials OAuth2)
FLAIR_CLIENT_ID=
FLAIR_CLIENT_SECRET=
FLAIR_API_BASE_URL=https://api.flair.co
FLAIR_API_ROOT_PATH=/api/
FLAIR_TOKEN_PATH=/oauth2/token

# Networking and retries
FLAIR_REQUEST_TIMEOUT_MS=12000
FLAIR_RETRY_MAX=2
FLAIR_RETRY_BASE_MS=250
FLAIR_TOKEN_SKEW_SEC=30

# Security
ALLOWED_MCP_HOSTS=localhost,127.0.0.1
ALLOWED_MCP_ORIGINS=
# read mode => false, write mode => true
WRITE_TOOLS_ENABLED=false

# Logging
LOG_LEVEL=info
LOG_FILE=
